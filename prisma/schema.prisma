generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commandes {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  id_client  Int
  client_id   Int
  
  // Relation avec la table Produits
  produits    Produits[]
  
  @@map("commandes")
}

model Produits {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  id_commande Int
  id_prod Int
  
  // Relations
  commande    Commandes  @relation(fields: [id_commande], references: [id])
  
  @@map("produits")
}